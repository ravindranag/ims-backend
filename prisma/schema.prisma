// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
	Placed
	Processed
	Delivered
}

model User {
	id Int @id @default(autoincrement())
	email String
	password String
	admin Admin?
	seller Seller?
	customer Customer?
}

model Admin {
	id Int @id @default(autoincrement())
	name String
	userId Int @unique
	user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Seller {
	id Int @id @default(autoincrement())
	name String
	userId Int @unique
	user User @relation(fields: [userId], references: [id], onDelete: Cascade)
	products Product[]
}

model Customer {
	id Int @id @default(autoincrement())
	name String
	address String
	userId Int @unique
	user User @relation(fields: [userId], references: [id], onDelete: Cascade)
	orders ProductOrder[]
}

model Product {
	id Int @id @default(autoincrement())
	name String
	description String?
	price Float
	quantity Int
	sellerId Int
	soldBy Seller @relation(fields: [sellerId], references: [id], onDelete: Cascade)
	orderedBy ProductOrder[]
}

model ProductOrder {
	id Int @id @default(autoincrement())
	quantity Int
	amount Float
	customerId Int
	status OrderStatus @default(Placed)
	customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
	productId Int
	product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}