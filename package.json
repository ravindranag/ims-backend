{
  "name": "ims-backend",
  "version": "1.0.0",
  "description": "Backend for Inventory Management System",
  "main": "src/app.js",
  "author": "Ravindra Nag <ravindranag52@gmail.com>",
  "license": "MIT",
  "private": true,
  "type": "module",
  "dependencies": {
    "@prisma/client": "^4.12.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jose": "^4.13.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.21.4",
    "@types/jest": "^29.5.0",
    "cross-env": "^7.0.3",
    "jest": "^29.5.0",
    "prisma": "^4.12.0",
    "supertest": "^6.3.3"
  },
  "scripts": {
    "migrate:dev": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "dev": "nodemon src/app.js",
    "start": "node src/app.js",
    "format": "prisma format",
    "generate": "prisma generate",
    "studio": "prisma studio",
    "build": "yarn; yarn migrate:deploy; yarn generate",
    "test": "cross-env NODE_ENV=test jest --testTimeout=10000 --coverage --runInBand",
    "pretest": "cross-env NODE_ENV=test",
    "migrate:reset": "dotenv -e .env.test -- yarn prisma migrate reset"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
